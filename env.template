# Environment Variables Template for Docker Deployment
# Copy this file to .env and fill in your values

# MongoDB Configuration
MONGODB_URI=mongodb://admin:bandhub_admin_password@mongodb:27017/bandhub?authSource=admin

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-change-this-in-production
AUTH_SECRET=your-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# Admin User Configuration (Optional)
# The first user with this email will be automatically assigned admin role
ADMIN_NAME=BandHub Admin
ADMIN_EMAIL=admin@bandhub.com
ADMIN_PASSWORD=admin123

# Production Settings
NODE_ENV=production
